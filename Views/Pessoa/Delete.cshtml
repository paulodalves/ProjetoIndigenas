@model ProjetoIndigenas.Models.Pessoa

@{
    ViewData["Title"] = "Excluir";
}

<div class="titulo">
    <div class="bloco-titulo"></div><h1 class="centraliza-titulo"><strong>Excluir Pessoa</strong></h1>
</div>

<h3>Você deseja excluir essa pessoa?</h3>
<div class="cor-form">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf_Rani):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf_Rani)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tel1):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tel1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tel2):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tel2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Senha):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Senha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatNasc):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatNasc)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="PessoaID" />
        <input type="submit" value="Excluir" class="btn btn-danger btn-sm" />
        <a asp-action="Index" class="btn btn-primary btn-sm">Cancelar</a>
    </form>
</div>
